# Run full TypeScript type check (same as Vercel)
echo "ğŸ” Running TypeScript type check (same as Vercel)..."
npm run type-check || exit 1

# Run pattern-based type check (catches common issues)
echo "ğŸ” Running type pattern checks..."
npm run type-check:patterns || exit 1

# Run lint-staged for formatting and linting
npx lint-staged